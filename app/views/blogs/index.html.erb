<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

    <p><%= notice %></p>

    <h1>ブログ一覧</h1>
    <%= link_to "ブログを作成する",new_blog_path,class:'btn btn-default btn-sm btn-info'%>
    <% @blogs.each do |blog| %>
    <div class="row">

    <%= link_to blog_path(blog) do %>
    <h4><strong><%=blog.title%></strong></h4>
  <% end %>
   <p><%= blog.content %></p>
   <p><%= blog.user.name if blog.user %></p>
   <div class="field">
    <%= profile_img(blog.user) if blog.user.present? %>
  </div>

   <%= link_to "編集", edit_blog_path(blog.id),class:'btn btn-default btn-sm btn-success'%>
   <%= link_to '削除',blog_path(blog.id),method: :delete,data: { confirm: '本当に削除していいですか？' } %>
   <div>

  <% end %>
 </div>
</div>
<div id="page-top-btn" class="page-top-btn">
    <p><a class="move-page-top" id="move-page-top">▲</a></p>
</div>
